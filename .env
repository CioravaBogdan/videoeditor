# Production environment configuration
NODE_ENV=production

# External URLs
EXTERNAL_DOMAIN=http://localhost:3030
WEBHOOK_URL=https://your-n8n-instance.com/webhook/video-render

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Worker Configuration
CPU_WORKER_REPLICAS=4
CPU_WORKER_CONCURRENCY=2
GPU_WORKER_REPLICAS=0
GPU_WORKER_CONCURRENCY=1

# Cleanup Configuration
AUTO_CLEANUP_ENABLED=true
CLEANUP_AFTER_HOURS=24

# API Configuration
PORT=3001

# GPU Support (for development with GPU)
# Uncomment these lines if you have NVIDIA GPU support
# COMPOSE_PROFILES=gpu
# GPU_WORKER_REPLICAS=1
